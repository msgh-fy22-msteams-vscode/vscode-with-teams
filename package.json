{
	"name": "vscode-with-teams",
	"displayName": "VSCode with Teams",
	"description": "A VSCode extension to bring Microsoft Teams into the VSCode editor",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-with-teams.showStatusBarItem",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-with-teams.showStatusBarItem",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.33.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^6.8.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"prettier": "^1.19.1",
		"prettier-eslint": "^10.1.1",
		"typescript": "^4.4.3"
	}
}